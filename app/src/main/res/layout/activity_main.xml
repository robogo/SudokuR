<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#FF888888">

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_v_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.04"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_v_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.96"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_h_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.04"/>

    <com.robogo.sudokur.SudokuView
            android:id="@+id/sudoku_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintTop_toTopOf="@id/guide_h_1"
            app:layout_constraintStart_toEndOf="@id/guide_v_1"
            app:layout_constraintEnd_toStartOf="@id/guide_v_2"/>
    <Space
            android:id="@+id/space_after_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sudoku_view"
            android:layout_marginTop="18dp"/>
    <ImageButton
            android:id="@+id/button_option"
            android:src="@drawable/ic_opt"
            style="@style/CommandButton"
            android:layout_marginLeft="0dp"
            app:layout_constraintStart_toStartOf="@id/guide_v_1"
            app:layout_constraintEnd_toStartOf="@id/button_level"
            app:layout_constraintTop_toBottomOf="@id/space_after_view"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:onClick="onOption"/>
    <ImageButton
            android:id="@+id/button_level"
            android:src="@drawable/ic_level1"
            style="@style/CommandButton"
            android:layout_width="wrap_content"
            android:layout_marginRight="0dp"
            app:layout_constraintStart_toEndOf="@id/button_option"
            app:layout_constraintEnd_toStartOf="@id/button_auto"
            app:layout_constraintTop_toBottomOf="@id/space_after_view"
            android:onClick="onLevel"/>
    <ImageButton
            android:id="@+id/button_auto"
            android:src="@drawable/ic_auto"
            style="@style/CommandButton"
            android:layout_width="wrap_content"
            android:layout_marginLeft="0dp"
            app:layout_constraintStart_toEndOf="@id/button_level"
            app:layout_constraintEnd_toStartOf="@id/button_manual"
            app:layout_constraintTop_toBottomOf="@id/space_after_view"
            android:onClick="onNewGame"/>
    <ImageButton
            android:id="@+id/button_manual"
            android:src="@drawable/ic_manual"
            style="@style/CommandButton"
            app:layout_constraintStart_toEndOf="@id/button_auto"
            app:layout_constraintEnd_toStartOf="@id/button_undo"
            app:layout_constraintTop_toBottomOf="@id/space_after_view"
            android:onClick="onManualGame"/>
    <ImageButton
            android:id="@+id/button_undo"
            android:src="@drawable/ic_undo"
            style="@style/CommandButton"
            app:layout_constraintStart_toEndOf="@id/button_manual"
            app:layout_constraintEnd_toStartOf="@id/button_undo_n"
            app:layout_constraintTop_toBottomOf="@id/space_after_view"
            android:onClick="onUndo"/>
    <ImageButton
            android:id="@+id/button_undo_n"
            android:src="@drawable/ic_undo_n"
            style="@style/CommandButton"
            app:layout_constraintStart_toEndOf="@id/button_undo"
            app:layout_constraintEnd_toStartOf="@id/button_solution"
            app:layout_constraintTop_toBottomOf="@id/space_after_view"
            android:onClick="onUndoN"/>
    <ImageButton
            android:id="@+id/button_solution"
            android:src="@drawable/ic_solution"
            style="@style/CommandButton"
            app:layout_constraintStart_toEndOf="@id/button_undo_n"
            app:layout_constraintEnd_toEndOf="@id/guide_v_2"
            app:layout_constraintTop_toBottomOf="@id/space_after_view"
            android:onClick="onSolution"/>

</androidx.constraintlayout.widget.ConstraintLayout>